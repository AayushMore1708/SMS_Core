@model IEnumerable<SMS_Core.Models.tblFeeSubCategoryFine>
@{
    // Layout = null;
   @* Html.EnableClientValidation(); *@
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Fee Sub Category Fine List</title>
    <style>
        html, body {
            height: 100%;
        }

        .MyCssClassD
{
  background:url(@Url.Content("~/Content/ico/delete.png")) no-repeat;display:block; height:24px; width:24px;
}

        .MyCssClassE
{
  background:url(@Url.Content("~/Content/ico/edit.png")) no-repeat;display:block; height:24px; width:24px;
}


    </style>



    <link href="~/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
</head>
<body class='default'>
    <div id="crmContentPanel">

        <div class="panel panel-default">
            <div class="panel-heading">
                Fee Sub Category Fine List
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Fee Category</th>
                                <th>Fee Sub Category</th>
                                <th>Fine Amount</th>
                                <th>Fee Fine Type</th>
                                <th>Fee Fine Mode</th>
                                <th>Fee Fine Remarks</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.FeeCategoryName)</td>
                                <td>@Html.DisplayFor(modelItem => item.FeeSubCategoryName)</td>
                                <td>@Html.DisplayFor(modelItem => item.FeeFineAmount)</td>
                                <td>@Html.DisplayFor(modelItem => item.FeeFineType)</td>
                                <td>@Html.DisplayFor(modelItem => item.FeeFineMode)</td>
                                <td>@Html.DisplayFor(modelItem => item.FineReason)</td>
                                <td>
                                    @Html.ActionLink(" ", "FeeSubCategoryFineEdit", new { id = item.FeeSubCategoryFineId }, new { @class = "MyCssClassE" })

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <script src="~/Content/js/jquery.dataTables.js"></script>
    <script src="~/Content/js/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });

    </script>
</body>
</html>