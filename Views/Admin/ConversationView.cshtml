@model IEnumerable<SMS_Core.Models.tblConversation>
<link href="~/Content/css/dataTables.bootstrap.css" rel="stylesheet" />

<table class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:left">
                    <b> @Html.DisplayFor(modelItem => item.Conv)</b>
                </td>
            </tr>
            <tr>
                <td style="font-size:smaller;text-align:left">by&nbsp;@Html.DisplayFor(modelItem => item.ConvBy)&nbsp;on&nbsp;@String.Format("{0:dd-MMM-yyyy HH:mm:ss}", item.ConvDate)&nbsp;to<br />@Html.DisplayFor(modelItem => item.ConvTo),@Html.DisplayFor(modelItem => item.ClassName),@Html.DisplayFor(modelItem => item.BatchName),@Html.DisplayFor(modelItem => item.Department)</td>
            </tr>

        }

    </tbody>
</table>
<script src="~/Content/js/jquery.dataTables.js"></script>
<script src="~/Content/js/dataTables.bootstrap.js"></script>
