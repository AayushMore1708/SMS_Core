@model IEnumerable<SMS_Core.Models.tblCourseBatch>
@{
    // Layout = null;
     @* Html.EnableClientValidation(); *@
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>View Batches </title>
    <style>
        html, body {
            height: 100%;
        }
    </style>

    <link href="~/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
</head>
<body class='default'>
    <div id="crmContentPanel">
        <div style="font-size:12px;height:40px;vertical-align:top;margin-left:10px;">
            <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;&nbsp; @Html.ActionLink("NEW", "BatchesNew", "Admin")&nbsp;&nbsp;
        </div>

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Batches
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Cource Name</th>
                                    <th>Batch Name</th>
                                    <th>Batch Start Date</th>
                                    <th>Batch End Date</th>
                                    <th>Maximum Student</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.CourseName)</td>
                                    @if (item.BatchName != "")
                                    {
                                        <td>@Html.ActionLink(item.BatchName, "Batchesedit", new { id = item.BatchId })</td>
                                    }
                                    else
                                    {
                                        <td>@Html.DisplayFor(modelItem => item.BatchName)</td>
                                    }

                                    <td>  @string.Format("{0:dd-MM-yyyy}", item.BatchStartDate)</td>
                                    <td>  @string.Format("{0:dd-MM-yyyy}", item.BatchEndDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MaximumStudent)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Active)</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/js/jquery.dataTables.js"></script>
    <script src="~/Content/js/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });

    </script>
</body>
</html>