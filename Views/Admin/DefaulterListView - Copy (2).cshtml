                                    <text>0</text><br />
                                    //FeeRB =0;
                                }

                            }
                        </td>
                        <td style="text-align:right">@gttl
                        @{ 
                            FeeRD += gttl;
                        }
                        
                        </td>
                        <td style="text-align:right;color:red;font-size:larger">
                            @if (item.AdmissionType == "Regular")
                            { 
                                if (item.GRType == null)
                                {
                                    adv = (ViewBag.feeTR - gttl);
                                }

                                if (item.GRType == "STAFF")
