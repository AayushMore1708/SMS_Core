@model IEnumerable<SMS_Core.Models.tblSubject>
@{
    // Layout = null;
   @* Html.EnableClientValidation(); *@
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>View Subjects</title>
    <style>
        html, body {
            height: 100%;
        }
    </style>

    <link href="~/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
</head>
<body class='default'>
    <div id="crmContentPanel">
        <div style="font-size:12px;height:40px;vertical-align:top;margin-left:10px;">
            <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;@Html.ActionLink("NEW", "SubjectNew", "Admin")&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;@Html.ActionLink("ASSIGN SUBJECTS", "Assignsubject", "Admin")&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;@Html.ActionLink("SUBJECT ALLOCATION TEACHER", "SubjectAllocation", "Admin")&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        </div>

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Subject
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Subject Name</th>
                                    <th>Subject Code</th>
                                    <th>Subject Description</th> 
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                <tr>
                                    @if (item.SubjectName != "")
                                    {
                                        <td>@Html.ActionLink(item.SubjectName, "SubjectEdit", new { id = item.SubjectId })</td>
                                    }
                                    else
                                    {
                                        <td>@Html.DisplayFor(modelItem => item.SubjectName)</td>
                                    }
                                    <td>@Html.DisplayFor(modelItem => item.SubjectCode)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SubjectDescription)</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/js/jquery.dataTables.js"></script>
    <script src="~/Content/js/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });

    </script>
</body>
</html>