@model SMS_Core.Models.PrimEngFee
@{
    // Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Edit Balance</title>
    <link rel="stylesheet" href="~/Content/css/chosen.css">

    <script type="text/javascript">
        $(document).ready(function () {
            // $('#footer').hide();
            $('#sav').click(function (event) {
                if (!confirm('Are you sure that you want to Save')) {
                    event.preventDefault();
                }
                else {
                    $('#frm').submit();
                    return false;

                }

            });

            $('#frmsave').click(function (event) {
                if (!confirm('Are you sure that you want to Save'))
                    event.preventDefault();
            });


        });

    </script>
</head>
<body>
    <div style="font-size:12px;height:40px;vertical-align:top;margin-left:10px">
        <img src="~/_imgs/grid/SaveAndClose_16.png" />&nbsp;&nbsp;<a href="#" id="sav" class="btn btn-primary">SAVE & CLOSE</a>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

    </div>


    <h3>&nbsp;&nbsp;Update Balance</h3>

    @using (Html.BeginForm("FeeBalanceEdit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "frm", @class = "form-horizontal" }))
    {
        <div class="panel">
            <div class="panel-body">

                <div class="form-group">
                    <label class="control-label col-lg-2">FeeID</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.FeeIDNo, new { @class = "form-control input-sm", @Readonly = true })
                        @Html.HiddenFor(model => model.id)
                        @Html.HiddenFor(model => model.Mediam)
                        @Html.HiddenFor(model => model.Standard2223)
                        @Html.HiddenFor(model => model.FEESRECEIVABLEFOR222023)
                        @Html.HiddenFor(model => model.NewAdmissionFees222023)

                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Name of Student</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.NameofStudent, new { @class = "form-control input-sm", @Readonly = true })
                    </div>
                </div>
                 

                <div class="form-group">
                    <label class="control-label col-lg-2">Amount to Pay</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.BALANCE222023, new { @class = "form-control input-sm" })
                    </div>
                </div>

                

                <div class="form-group">
                    <label class="control-label col-lg-2">Class</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.StandardRoman, new { @class = "form-control input-sm", @Readonly = true })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Batch</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.StudentBatch, new { @class = "form-control input-sm", @Readonly = true })
                    </div>
                </div>
 
                 

                <div class="form-group">
                    <label for="tags" class="control-label col-lg-4">&nbsp;</label>
                    <div class="col-lg-8">
                        <input type="submit" id="frmsave" value="Save & Close" class="btn btn-primary" />
                        <button class="btn btn-primary"><i class="icon-refresh icon-white"></i> Refresh</button>
                    </div>
                </div>
            </div>
        </div>
    }

    <script src="~/Content/js/chosen.jquery.js" type="text/javascript"></script>

    <script type="text/javascript">
        var config = {
            '.chosen-select': {},
            '.chosen-select-deselect': { allow_single_deselect: true },
            '.chosen-select-no-single': { disable_search_threshold: 10 },
            '.chosen-select-no-results': { no_results_text: 'Oops, nothing found!' },
            '.chosen-select-width': { width: "100%" }
        }
          //for (var selector in config) {
          //    $(selector).chosen(config[selector]);
         // }
    </script>
</body>
</html>