@model IEnumerable<SMS_Core.Models.tblAcadamicYear>
@{
    // Layout = null;
    @* Html.EnableClientValidation(); *@
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>View Acadamic Year </title>
    <style>
        html,
        body {
            height: 100%;
        }
    </style>

    <link href="~/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
</head>

<body class='default'>
    <div id="crmContentPanel">
        <div style="font-size:12px;height:40px;vertical-align:top;margin-left:10px;">
            <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;&nbsp; @Html.ActionLink("NEW", "AcadamicYearNew",
            "Admin")&nbsp;&nbsp;
        </div>

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Acadamic Years
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Acadamic Start Year</th>
                                    <th>Acadamic Start Month</th>
                                    <th>Acadamic End Year</th>
                                    <th>Acadamic End Month</th>
                                    <th>Acadamic Status</th>
                                    <th>Acadamic Year</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.ActionLink(item.AcadamicStartYear, "AcadamicYearEdit", new
                                                {
                                                    id =
                                                     item.AcadamicYearId
                                                })</td>
                                        <td>@Html.DisplayFor(modelItem => item.AcadamicStartMonth)</td>
                                        <td>@Html.DisplayFor(modelItem => item.AcadamicEndYear)</td>
                                        <td>@Html.DisplayFor(modelItem => item.AcadamicEndMonth)</td>
                                        <td>@Html.DisplayFor(modelItem => item.AcadamicStatus)</td>
                                        <td>@Html.DisplayFor(modelItem => item.AcadamicYear)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/js/jquery.dataTables.js"></script>
    <script src="~/Content/js/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });

    </script>
</body>

</html>