@model SMS_Core.Models.tblInstitute
@{
    // Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Edit Institute</title>
    <link rel="stylesheet" href="~/Content/css/chosen.css">
      
    <script type="text/javascript">
        $(document).ready(function () {
            // $('#footer').hide(); 
            $('#sav').click(function (event) {
                if (!confirm('Are you sure that you want to Save')) {
                    event.preventDefault();
                }
                else {
                    $('#frm').submit();
                    return false;

                }

            });

            $('#frmsave').click(function (event) {
                if (!confirm('Are you sure that you want to Save'))
                    event.preventDefault();
            });


        });

    </script>
</head>
<body>
    <div style="font-size:12px;height:40px;vertical-align:top;margin-left:10px">
        <img src="~/_imgs/grid/SaveAndClose_16.png" />&nbsp;&nbsp;<a href="#" id="sav" class="btn btn-primary">SAVE & CLOSE</a>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        
    </div>

     
    <h3>&nbsp;&nbsp;Edit Institute</h3>
  
    @using (Html.BeginForm("EditInstitute", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "frm", @class = "form-horizontal" }))
    {
        <div class="panel">
            <div class="panel-body">

                <div class="form-group">
                    <label class="control-label col-lg-2">Institute Name</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.InstituteName, new { @class = "form-control input-sm" })
                        @Html.HiddenFor(model => model.InstituteId)
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Institute Address</label>
                    <div class="col-lg-4">
                        @Html.TextAreaFor(model => model.InstituteAddress, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Institute City</label>
                    <div class="col-lg-4">
                        @Html.DropDownListFor(model => model.InstituteCity, new SelectList(new[] { "Mumbai", "Thane" }), new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Institute State</label>
                    <div class="col-lg-4">
                        @Html.DropDownListFor(model => model.InstituteState, new SelectList(new[] { "Maharashtra" }), new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Institute Country</label>
                    <div class="col-lg-4">
                        @Html.DropDownListFor(model => model.InstituteCountry, new SelectList(new[] { "India" }), new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Institute Contact Person</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.InstituteAdminContactPerson, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Institute Email</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.InstituteEmail, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Institute Contact Phone</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.InstitutePhone, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Institute Mobile</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.InstituteMobile, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Institute Medium</label>
                    <div class="col-lg-4">
                        @Html.DropDownListFor(model => model.InstituteMedium, new SelectList(new[] { "Marathi and English", "Marathi", "English" }), new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Institute Type</label>
                    <div class="col-lg-4">
                        @Html.DropDownListFor(model => model.InstituteType, new SelectList(new[] { "School and JR. College", "School", "College" }), new { @class = "form-control input-sm" })
                    </div>
                </div>




                <div class="form-group">
                    <label for="tags" class="control-label col-lg-4">&nbsp;</label>
                    <div class="col-lg-8">
                        <input type="submit" id="frmsave" value="Save & Close" class="btn btn-primary" />
                        <button class="btn btn-primary"><i class="icon-refresh icon-white"></i> Refresh</button>
                    </div>
                </div>
            </div>
        </div>
    }

    <script src="~/Content/js/chosen.jquery.js" type="text/javascript"></script>

    <script type="text/javascript">
        var config = {
            '.chosen-select': {},
            '.chosen-select-deselect': { allow_single_deselect: true },
            '.chosen-select-no-single': { disable_search_threshold: 10 },
            '.chosen-select-no-results': { no_results_text: 'Oops, nothing found!' },
            '.chosen-select-width': { width: "100%" }
        }
          //for (var selector in config) {
          //    $(selector).chosen(config[selector]);
         // }
    </script>
</body>
</html>