@model IEnumerable<SMS_Core.Models.qryExamMarkSet>
@{
    // Layout = null;
     @* Html.EnableClientValidation(); *@
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Exam Mark Set</title>
    <style>
        html, body {
            height: 100%;
        }

        .MyCssClassD
{
  background:url(@Url.Content("~/Content/ico/delete.png")) no-repeat;display:block; height:24px; width:24px;
}

        .MyCssClassE
{
  background:url(@Url.Content("~/Content/ico/edit.png")) no-repeat;display:block; height:24px; width:24px;
}


    </style>



    <link href="~/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
</head>
<body class='default'>
    <div id="crmContentPanel">

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @if (ViewBag.Desg != "Student" && ViewBag.Desg != "Employee")
                    {
                        <text>
                            <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;@Html.ActionLink("EXAM TERM", "ExamTermNew", "Admin")&nbsp;&nbsp;&nbsp;&nbsp;
                            <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;@Html.ActionLink("EXAM NAME", "ExamNameNew", "Admin")&nbsp;&nbsp;&nbsp;&nbsp;
                            <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;@Html.ActionLink("EXAM GRADE POINT", "GradePointNew", "Admin")&nbsp;&nbsp;&nbsp;&nbsp;
                            <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;@Html.ActionLink("SET EXAM MARKS", "ExamMarkSet", "Admin")&nbsp;&nbsp;&nbsp;&nbsp;
                        </text>
                    }
                    <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;@Html.ActionLink("STUDENT MARKS", "StudentMark", "Admin")&nbsp;&nbsp;&nbsp;&nbsp;

                    Exam Mark Set&nbsp;&nbsp;&nbsp;  <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;@Html.ActionLink("New", "ExamMarkSetNew", "Admin")&nbsp;&nbsp;&nbsp;&nbsp;
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Exam Details</th>
                                    <th>Cource Name</th>
                                    <th>Batch Name</th>
                                    <th>Subject</th>
                                    <th>Day to Day Observation</th>
                                    <th>Oral Works</th>
                                    <th>Practical Experiment</th>
                                    <th>Activity</th>
                                    <th>Project</th>
                                    <th>Test/Open Book</th>
                                    <th>Home/Class Work</th>
                                    <th>Others</th>
                                    <th><b>Total A</b></th>
                                    <th>Theory</th>
                                    <th>Oral/Practical</th>
                                    <th><b>Total B</b></th>
                                    <th class="text-left"><span id="mySpan">Grand Total(A + B)</span></th> 
                                    <th>Exam Date</th>
                                    <th>Start Time</th>
                                    <th>End Time</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>

                                    <td>@Html.DisplayFor(modelItem => item.ExamDesc)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CourseName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.BatchName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FormulationDaytoDayObservation)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FormulationOralwork)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FormulationPracticalExperiment)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FormulationActivity)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FormulationProject)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FormulationTestOpenBook)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FormulationHomeClasswork)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FormulationOthers)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FormulationTotalA)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SummativeTheory)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SummativeOralPractical)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SummativeTotalB)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TotalMark)</td>
                                    <td>  @string.Format("{0:dd-MM-yyyy}", item.ExamDate)  </td>
                                    <td>@Html.DisplayFor(modelItem => item.ExamStartTime)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ExamEndTime)</td>
                                    <td>
                                        @Html.ActionLink(" ", "ExamMarkSetEdit", new { ExamName = item.ExamName, CourseName = item.CourseName, BatchName = item.BatchName }, new { @class = "MyCssClassE" })

                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/js/jquery.dataTables.js"></script>
    <script src="~/Content/js/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#dataTables-example').dataTable({
                "iDisplayLength": -1, "searchHighlight": true,

                "columnDefs": [
                    { "visible": false, "targets": 0 }
                ],
                "order": [[1, 'asc']],
                "displayLength": 25,
                "drawCallback": function (settings) {
                    var api = this.api();
                    var rows = api.rows({ page: 'current' }).nodes();
                    var last = null;

                    api.column(0, { page: 'current' }).data().each(function (group, i) {
                        if (last !== group) {
                            $(rows).eq(i).before(
                                '<tr class="group"><td colspan="11" style="font-size:large;color:darkblue">' + group + '</td></tr>'
                            );
                            last = group;
                        }
                    });
                }
            });
        });


    </script>
</body>
</html>