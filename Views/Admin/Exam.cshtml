@model IEnumerable<SMS_Core.Models.tblExamTerm>
@{
    // Layout = null;
   @* Html.EnableClientValidation(); *@
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Exam List</title>
    <style>
        html, body {
            height: 100%;
        }

        .MyCssClassD
{
  background:url(@Url.Content("~/Content/ico/delete.png")) no-repeat;display:block; height:24px; width:24px;
}

        .MyCssClassE
{
  background:url(@Url.Content("~/Content/ico/edit.png")) no-repeat;display:block; height:24px; width:24px;
}


    </style>



    <link href="~/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
</head>
<body class='default'>
    <div id="crmContentPanel">
        <div style="font-size:12px;height:40px;vertical-align:top;margin-left:10px;">
            @if (ViewBag.Desg != "Student" && ViewBag.Desg != "Employee")
            {
                <text>
                    <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;@Html.ActionLink("EXAM TERM", "ExamTermNew", "Admin")&nbsp;&nbsp;&nbsp;&nbsp;
                    <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;@Html.ActionLink("EXAM NAME", "ExamNameNew", "Admin")&nbsp;&nbsp;&nbsp;&nbsp;
                    <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;@Html.ActionLink("EXAM GRADE POINT", "GradePointNew", "Admin")&nbsp;&nbsp;&nbsp;&nbsp;
                    <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;@Html.ActionLink("SET EXAM MARKS", "ExamMarkSet", "Admin")&nbsp;&nbsp;&nbsp;&nbsp;
                </text>
            }
            <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;@Html.ActionLink("STUDENT MARKS", "StudentMark", "Admin")&nbsp;&nbsp;&nbsp;&nbsp;

        </div>

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Exam Terms
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Exam Term</th>
                                    <th>Exam Name</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>

                                    <td>@Html.DisplayFor(modelItem => item.TermName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ExamName)</td>
                                    <td>  @string.Format("{0:dd-MM-yyyy}", item.StartDate)  </td>
                                    <td>@string.Format("{0:dd-MM-yyyy}", item.EndDate) </td>
                                    <td>
                                        @if (ViewBag.Desg != "Student" && ViewBag.Desg != "Employee")
                                        {
                                            <text>
                                                @Html.ActionLink(" ", "ExamTermEdit", new { id = item.ExamId }, new { @class = "MyCssClassE" })
                                            </text>
                                        }
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/js/jquery.dataTables.js"></script>
    <script src="~/Content/js/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });

    </script>
</body>
</html>