@model SMS_Core.Models.tblAcadamicCource
@{
    // Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Edit Cources</title>
    <link rel="stylesheet" href="~/Content/css/chosen.css">

    <script type="text/javascript">
        $(document).ready(function () {
            // $('#footer').hide();
            $('#sav').click(function (event) {
                if ($('#AcadamicCourceName').val() != "") {
                    if (!confirm('Are you sure that you want to Save')) {
                        event.preventDefault();
                    }
                    else {
                        $('#frm').submit();
                        return false;

                    }
                }
                else {
                    alert("Cource Name should not be blank")
                }
            });

            $('#frmsave').click(function (event) {
                if ($('#AcadamicCourceName').val() != "") {
                    if (!confirm('Are you sure that you want to Save'))
                        event.preventDefault();
                }
                else {
                    alert("Cource Name should not be blank")
                }
            });


        });

    </script>
</head>
<body>
    <div style="font-size:12px;height:40px;vertical-align:top;margin-left:10px">
        <img src="~/_imgs/grid/SaveAndClose_16.png" />&nbsp;&nbsp;<a href="#" id="sav" class="btn btn-primary">SAVE & CLOSE</a>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

    </div>


    <h3>&nbsp;&nbsp;Cources Edit</h3>

    @using (Html.BeginForm("CourcesEdit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "frm", @class = "form-horizontal" }))
    {
        <div class="panel">
            <div class="panel-body">

                <div class="form-group">
                    <label class="control-label col-lg-2">Cource Name</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.AcadamicCourceName, new { @class = "form-control input-sm" })
                        @Html.HiddenFor(model => model.AcadamicCourceId, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Cource Description</label>
                    <div class="col-lg-4">
                        @Html.TextAreaFor(model => model.AcadamicCourceDescription, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Cource Stream</label>
                    <div class="col-lg-4">
                        @Html.DropDownListFor(model => model.CourseStream, new SelectList(new[] { "Arts", "Commerce", "Science" }),"", new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Cource Code</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.AcadamicCourceCode, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Cource Minimum Attendance	</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.AcadamicCourceMinAttn, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Cource Attendance Type</label>
                    <div class="col-lg-4">
                        @Html.DropDownListFor(model => model.AcadamicCourceAttnType, new SelectList(new[] { "Daily", "Subject Wise" }), new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Cource Total Working Days	</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.AcadamicCourceTotalWorkingDays, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Cource Syllabus </label>
                    <div class="col-lg-4">
                        @Html.DropDownListFor(model => model.AcadamicCourceSyllabus, new SelectList(new[] { "MAHARASHTRA", "S.S.C.", "MSBSSSC", "MSBSHSE", "ICSE",  "GPA", "NCRT","CBSE" }), new { @class = "form-control input-sm" })
                    </div>
                </div>




                <div class="form-group">
                    <label for="tags" class="control-label col-lg-4">&nbsp;</label>
                    <div class="col-lg-8">
                        <input type="submit" id="frmsave" value="Update & Close" class="btn btn-primary" />
                        <button class="btn btn-primary"><i class="icon-refresh icon-white"></i> Refresh</button>
                    </div>
                </div>
            </div>
        </div>
    }

    <script src="~/Content/js/chosen.jquery.js" type="text/javascript"></script>

    <script type="text/javascript">
        var config = {
            '.chosen-select': {},
            '.chosen-select-deselect': { allow_single_deselect: true },
            '.chosen-select-no-single': { disable_search_threshold: 10 },
            '.chosen-select-no-results': { no_results_text: 'Oops, nothing found!' },
            '.chosen-select-width': { width: "100%" }
        }
          //for (var selector in config) {
          //    $(selector).chosen(config[selector]);
         // }
    </script>
</body>
</html>