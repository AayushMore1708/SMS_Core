@model IEnumerable<SMS_Core.Models.tblSalaryHD>
@{
    // Layout = null;
    @* Html.EnableClientValidation(); *@
}
<!DOCTYPE html>
<html lang="en">
<head>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#footer').hide();
        })
    </script>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Salary Employee</title>
    <style>
        html, body {
            height: 100%;
        }

        .MyCssClassD
{
  background:url(@Url.Content("~/Content/ico/delete.png")) no-repeat;display:block; height:24px; width:24px;
}

        .MyCssClassE
{
  background:url(@Url.Content("~/Content/ico/edit.png")) no-repeat;display:block; height:24px; width:24px;
}
        .MyCssClassP
{
  background:url(@Url.Content("~/Content/ico/Print.jpg")) no-repeat;display:block; height:24px; width:24px;
}

    </style>



    <link href="~/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
</head>
<body class='default'>
    <div id="crmContentPanel">
        <div style="font-size:12px;height:40px;vertical-align:top;margin-left:10px;">
            <img src="~/_imgs/grid/EditRule_16.png" />&nbsp;&nbsp; @Html.ActionLink("Salary Master", "SalaryMst", "Home")&nbsp;&nbsp;
            <img src="~/_imgs/grid/EditRule_16.png" />&nbsp;&nbsp; @Html.ActionLink("Create Salary", "SalaryEmpCreate", "Home")&nbsp;&nbsp;
            <img src="~/_imgs/grid/EditRule_16.png" />&nbsp;&nbsp; @Html.ActionLink("View Salary", "SalaryEmpView", "Home")&nbsp;&nbsp;

        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Salary Employee</h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Employee Name</th>
                                <th>Designation</th>
                                <th>Month</th>
                                <th>Year</th>
                                <th>Work Days</th>
                                <th>Leave Allowed</th>
                                <th>Basic Salary</th>
                                <th>DA</th>
                                <th>HRA</th>
                                <th>Conveyance</th>
                                <th>Medical Expenses</th>
                                <th>Travel Allowance</th>

                                <th>PF</th>
                                <th>ProfessionTax</th>
                                <th>TDS</th>

                                <th>CTC</th>
                                <th>Payable Salary</th>

                                <th>Leave Taken</th>
                                <th>Leave Type</th>
                                <th>Last Modified Date</th>

                                <th>Last Modified By</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.EmployeeName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Designation)</td>
                                    <td>
                                        @switch (item.SalaryMonth)
                                        {
                                            case 1:
                                                <text>January</text>
                                                break;
                                            case 2:
                                                <text>February</text>
                                                break;
                                            case 3:
                                                <text>March</text>
                                                break;
                                            case 4:
                                                <text>April</text>
                                                break;
                                            case 5:
                                                <text>May</text>
                                                break;
                                            case 6:
                                                <text>June</text>
                                                break;
                                            case 7:
                                                <text>July</text>
                                                break;
                                            case 8:
                                                <text>August</text>
                                                break;
                                            case 9:
                                                <text>September</text>
                                                break;
                                            case 10:
                                                <text>October</text>
                                                break;
                                            case 11:
                                                <text>November</text>
                                                break;
                                            case 12:
                                                <text>December</text>
                                                break;

                                        }
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.SalaryYear)</td>
                                    <td>@Html.DisplayFor(modelItem => item.WorkDays)</td>
                                    <td>@Html.DisplayFor(modelItem => item.AllowedLeaves)</td>
                                    <td>@Html.DisplayFor(modelItem => item.BasicSalary)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DA)</td>
                                    <td>@Html.DisplayFor(modelItem => item.HRA)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Conveyance)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MedicalExpenses)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TravelAllowance)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PF)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ProfessionTax)</td>

                                    <td>@Html.DisplayFor(modelItem => item.TDS)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CTC)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TotalSalary)</td>
                                    <td>@Html.DisplayFor(modelItem => item.LeaveTaken)</td>
                                    <td>@Html.DisplayFor(modelItem => item.LeaveType)</td>

                                    <td>  @string.Format("{0:dd-MM-yyyy}", item.LastModifiedDate) </td>
                                    <td>@Html.DisplayFor(modelItem => item.LastModifiedBy)</td>


                                    <td>
                                        @if (ViewBag.erole == "admin" || User.Identity.Name == "kamlesh@satams.com" || User.Identity.Name == "admin@satams.com")
                                        {
                                        @Html.ActionLink(" ", "SalaryEmpEdit", new { id = item.SalaryId }, new { @class = "MyCssClassE" })
                                        @Html.ActionLink(" ", "SalarySlipPrint", new { id = item.SalaryId }, new { @target = "new", @class = "MyCssClassP" });
                                        }

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <script src="~/Content/js/jquery.dataTables.js"></script>
    <script src="~/Content/js/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
                            $(document).ready(function () {
                                $('#dataTables-example').dataTable();
                });

    </script>
</body>
</html>