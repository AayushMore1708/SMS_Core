@model SMS_Core.Models.TaskM
@{
    Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Update Task </title>



    <script type="text/javascript">
        $(document).ready(function () {
            $('#sav').click(function (event) {
                if (!confirm('Are you sure that you want to Save')) {
                    event.preventDefault();
                }
                else {
                    $('#frm').submit();
                    return false;

                }

            });

            $('#frmsave').click(function (event) {
                if (!confirm('Are you sure that you want to Save'))
                    event.preventDefault();
            });


        });

    </script>
</head>
<body>



    @using (Html.BeginForm("UpdateTask", "Home", FormMethod.Post, new { id = "frm", @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(true)

        <div class="panel">
            <div class="panel-body">

                <div class="form-group">
                    <label class="control-label col-lg-2">Task Updated Date</label>
                    <div class="col-lg-2">
                        @Html.TextBox("TaskDateTime", "", new { @class = "form-control input-sm", @ReadOnly = true, @Value = @DateTime.Now.ToString("dd-MMM-yyyy") })
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-lg-2">Task Details</label>
                    <div class="col-lg-4">
                        @Model.TaskDetails
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Task Details Updates</label>
                    <div class="col-lg-4">
                        @Html.TextArea("TaskDetailsUpdate", new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Status</label>
                    <div class="col-lg-4">
                        @Html.DropDownList("TaskStatus", new SelectList(new[] { "Working", "Not Working", "Completed", "Closed" }), new { @class = "form-control input-sm chosen-select", @Style = "width:160px" })
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-lg-2">Due Date</label>
                    <div class="col-lg-2">
                        @Html.TextBoxFor(model => model.TaskDueOn, "", new { @class = "form-control input-sm", @Style = "width:85px", @ReadOnly = true })
                    </div>
                    <label class="control-label col-lg-1">Due Time</label>
                    <div class="col-lg-2">
                        @Html.TextBoxFor(model => model.TaskDueOnTime, "", new { @class = "form-control input-sm", @ReadOnly = true })
                    </div>
                </div>

                @Html.HiddenFor(model => model.TaskDetails)
                @Html.HiddenFor(model => model.TaskTo)
                @Html.HiddenFor(model => model.TaskFrom)

                @Html.HiddenFor(model => model.TaskToEmail)
                @Html.HiddenFor(model => model.TaskFromEmail)

                @Html.HiddenFor(model => model.PartyName)
                @Html.HiddenFor(model => model.ProductName)
                @Html.HiddenFor(model => model.Country)
                @Html.HiddenFor(model => model.TypeofWork)
                @Html.HiddenFor(model => model.Depatment)
                @Html.HiddenFor(model => model.TaskCC)
                @Html.HiddenFor(model => model.TaskFromEmail)
                @Html.HiddenFor(model => model.LastModifiedBy)
                @Html.HiddenFor(model => model.LastModifiedDateTime)
                @Html.HiddenFor(model => model.TaskDateTime)
                @Html.HiddenFor(model => model.TaskPriority)
                @Html.HiddenFor(model => model.TaskStatus)
                @Html.HiddenFor(model => model.TaskDueOn)
                @Html.HiddenFor(model => model.TaskDueOnTime)
                @Html.HiddenFor(model => model.GroupTask)



                @Html.HiddenFor(model => model.Taskid)

                <div class="form-group">
                    <label for="tags" class="control-label col-lg-4">&nbsp;</label>
                    <div class="col-lg-8">
                        <input type="submit" id="frmsave" value="Update " class="btn btn-primary" />
                    </div>

                </div>
            </div>
        </div>

    }<br />


    <script src="~/Content/js/chosen.jquery.js" type="text/javascript"></script>
    <script type="text/javascript">
        var config = {
            '.chosen-select': {},
            //'.chosen-select-deselect': { allow_single_deselect: true },
            //'.chosen-select-no-single': { disable_search_threshold: 10 },
            //'.chosen-select-no-results': { no_results_text: 'Oops, nothing found!' },
            //'.chosen-select-width': { width: "100%" }
        }
        for (var selector in config) {
            $(selector).chosen(config[selector]);
        }
    </script>

</body>
</html>
