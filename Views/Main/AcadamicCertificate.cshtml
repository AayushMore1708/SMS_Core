@model IEnumerable<SMS_Core.Models.tblAcadamicCertificate>
@{
    // Layout = null;
    @* Html.EnableClientValidation(); *@
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Acadamic Certificate</title>
    <style>
        html, body {
            height: 100%;
        }

        .MyCssClassD
{
  background:url(@Url.Content("~/Content/ico/delete.png")) no-repeat;display:block; height:24px; width:24px;
}

        .MyCssClassE
{
  background:url(@Url.Content("~/Content/ico/edit.png")) no-repeat;display:block; height:24px; width:24px;
}

        .MyCssClassP
{
  background:url(@Url.Content("~/Content/ico/Print.jpg")) no-repeat;display:block; height:24px; width:24px;
}

    </style>



    <link href="~/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
</head>
<body class='default'>
    <div id="crmContentPanel">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-heading">
                        <b>Acadamic Certificate</b>&nbsp;&nbsp;&nbsp;
                        @if (ViewBag.Desg != "Student" && ViewBag.Desg != "Employee")
                        {
                            <text>

                                <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;@Html.ActionLink("New", "AcadamicCertificateNew", "Home")&nbsp;&nbsp;&nbsp;&nbsp;
                            </text>
                        }

                       
                    </div>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Acadamic Certificate Date</th>
                                    <th>School Name</th> 
                                    <th>Student Name</th> 
                                    <th>Class</th>
                                    <th>Session</th> 
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>  @string.Format("{0:dd-MM-yyyy}", item.AwardedDated)  </td>
                                        <td>@Html.DisplayFor(modelItem => item.SchoolName)</td> 
                                        <td>@Html.DisplayFor(modelItem => item.AwardedTo)</td> 
                                        <td>@Html.DisplayFor(modelItem => item.AwardedFor)</td> 
                                        <td>@Html.DisplayFor(modelItem => item.AwardedSession)</td> 
                                        <td>
                                            @if (ViewBag.erole == "admin" || User.Identity.Name == "kamlesh@satams.com" || User.Identity.Name == "admin@satams.com")
                                            {
                                            @Html.ActionLink(" ", "AcadamicCertificateEdit", new { id = item.AcadamicCertificateID }, new { @class = "MyCssClassE" })
                                            @Html.ActionLink(" ", "AcadamicCertificatePrint", new { id = item.AcadamicCertificateID }, new { @target = "new", @class = "MyCssClassP" });
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/js/jquery.dataTables.js"></script>
    <script src="~/Content/js/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });

    </script>
</body>
</html>