@model IEnumerable<SMS_Core.Models.tblBook>
@{
    // Layout = null;
    @* Html.EnableClientValidation(); *@
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Book List</title>
    <style>
        html, body {
            height: 100%;
        }

        .MyCssClassD
{
  background:url(@Url.Content("~/Content/ico/delete.png")) no-repeat;display:block; height:24px; width:24px;
}

        .MyCssClassE
{
  background:url(@Url.Content("~/Content/ico/edit.png")) no-repeat;display:block; height:24px; width:24px;
}


    </style>



    <link href="~/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
</head>
<body class='default'>
    <div id="crmContentPanel">

        <div class="panel panel-default">
            <div class="panel-heading">
                Books
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Book Title</th>
                                <th>Author</th>
                                <th>Edition</th>
                                <th>Book Category</th>
                                <th>Publisher</th>
                                <th>No. of Copies</th>
                                <th>Shelf No</th>
                                <th>Book Position</th>
                                <th>Language</th>
                                <th>Book Condition</th>
                                <th>Other Details</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.BookTitle)</td>
                                <td>@Html.DisplayFor(modelItem => item.BookAuthor)</td>
                                <td>@Html.DisplayFor(modelItem => item.BookEdition)</td>
                                <td>@Html.DisplayFor(modelItem => item.BookCategory)</td>
                                <td>@Html.DisplayFor(modelItem => item.BookPublisher)</td>
                                <td>@Html.DisplayFor(modelItem => item.BookNoCopies)</td>
                                <td>@Html.DisplayFor(modelItem => item.BookShelfNo)</td>
                                <td>@Html.DisplayFor(modelItem => item.BookPosition)</td>
                                <td>@Html.DisplayFor(modelItem => item.BookLanguage)</td>
                                <td>@Html.DisplayFor(modelItem => item.BookCondition)</td>
                                <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                <td>
                                    @if (item.Status != "Issued")
                                    {
                                        @Html.ActionLink("Issue", "BookIssue", new { id = item.BookId })
                                    }
                                    @Html.ActionLink(" ", "BookEdit", new { id = item.BookId }, new { @class = "MyCssClassE" })
                                    @Html.ActionLink(" ", "DeleteBook", new { id = item.BookId }, new { @class = "MyCssClassD" })

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <script src="~/Content/js/jquery.dataTables.js"></script>
    <script src="~/Content/js/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });

    </script>
</body>
</html>