@model SMS_Core.Models.tblStoreVendor
@{
    // Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Vendor New</title>
    <link rel="stylesheet" href="~/Content/css/chosen.css">

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            // $('#footer').hide();
            $('#sav').click(function (event) {
                if ($('#VendorCompany').val() != "") {
                    if (!confirm('Are you sure that you want to Save')) {
                        event.preventDefault();
                    }
                    else {
                        $('#frm').submit();
                        return false;

                    }
                }
                else {
                    alert("Vendor Company should not be blank")
                    return false;
                }
            });

            $('#frmsave').click(function (event) {
                if ($('#VendorCompany').val() != "") {
                    if (!confirm('Are you sure that you want to Save')) {
                        event.preventDefault();
                    }
                    else {
                        $('#frm').submit();ss
                        //return false;
                    }
                }
                else {
                    alert("Vendor Company should not be blank")
                    return false;
                }
            });


        });

    </script>
</head>
<body>
    <div style="font-size:12px;height:40px;vertical-align:top;margin-left:10px">
        @* <img src="~/_imgs/grid/SaveAndClose_16.png" />&nbsp;&nbsp; @Ajax.ActionLink("SAVE & CLOSE", null, null, null, new { id = "sav" })&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; *@
    </div>
    <h3>&nbsp;&nbsp;Vendor</h3>
    <div class="panel">
        <div class="panel-body">
            @using (Html.BeginForm("VendorEdit", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "frm", @class = "form-horizontal" }))
            {


                <div class="form-group">
                    <label class="control-label col-lg-2">Vendor Category</label>
                    <div class="col-lg-4">
                        @Html.DropDownListFor(model => model.VendorCategory, new SelectList(ViewBag.vc, "CategoryName", "CategoryName"), new { @class = "form-control input-sm" })
                        @Html.HiddenFor(model => model.VendorId, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Vendor Company</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.VendorCompany, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Vendor Contact Person</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.VendorContactPerson, new { @class = "form-control input-sm" })
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-lg-2">Vendor Company Phone</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.VendorCompanyPhone, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Vendor Company Mobile</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.VendorCompanyMobile, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Vendor Company Email</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.VendorCompanyEmail, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Vendor Company Locality</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.VendorCompanyLocality, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Vendor Company Address</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.VendorCompanyAddress, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Vendor Company City</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.VendorCompanyCity, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Vendor Company State</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.VendorCompanyState, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Vendor Company Country</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.VendorCompanyCountry, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Vendor Bank Name</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.VendorBankName, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Vendor Branch Name</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.VendorBranchName, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Vendor Account Number</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.VendorAccountNumber, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Vendor IFSC Code</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.VendorIFSCCode, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="tags" class="control-label col-lg-4">&nbsp;</label>
                    <div class="col-lg-8">
                        <input type="button" id="frmsave" value="Update & Close" class="btn btn-primary" />
                        <button class="btn btn-primary"><i class="icon-refresh icon-white"></i> Refresh</button>
                    </div>
                </div>

            }





        </div>
    </div>
    <script src="~/Content/js/chosen.jquery.js" type="text/javascript"></script>

    <script type="text/javascript">
