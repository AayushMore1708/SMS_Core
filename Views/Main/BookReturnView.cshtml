@model IEnumerable<SMS_Core.Models.qryBookReturn>
@{
    // Layout = null;
    @* Html.EnableClientValidation(); *@
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Book Return List</title>
    <style>
        html, body {
            height: 100%;
        }

        .MyCssClassD
{
  background:url(@Url.Content("~/Content/ico/delete.png")) no-repeat;display:block; height:24px; width:24px;
}

        .MyCssClassE
{
  background:url(@Url.Content("~/Content/ico/edit.png")) no-repeat;display:block; height:24px; width:24px;
}


    </style>



    <link href="~/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
</head>
<body class='default'>
    <div id="crmContentPanel">

        <div class="panel panel-default">
            <div class="panel-heading">
                Book Return
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Book Details</th>
                                <th>Book Return Type</th>
                                <th>Book Return From</th>
                                <th>Return Date</th>
                                <th>Renew Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.BookDescription)</td>
                                <td>@Html.DisplayFor(modelItem => item.BookReturnType)</td>
                                <td>@Html.DisplayFor(modelItem => item.BookReturnFrom)</td>
                                <td>  @string.Format("{0:dd-MM-yyyy}", item.BookReturnDate) </td>
                                <td>  @string.Format("{0:dd-MM-yyyy}", item.BookRenewalDuedate) </td>
                                <td>
                                    @Html.ActionLink(" ", "BookReturnEdit", new { id = item.BookReturnId }, new { @class = "MyCssClassE" }) @Html.ActionLink(" ", "DeleteBookReturn", new { id = item.BookReturnId }, new { @class = "MyCssClassD" })

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <script src="~/Content/js/jquery.dataTables.js"></script>
    <script src="~/Content/js/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });

    </script>
</body>
</html>