@model IEnumerable<SMS_Core.Models.qryEmployee>

@{
    ViewBag.Title = "Welcome to Student Management System";
}
<script src="~/Scripts/jqx-all.js"></script>

<script>

    $(document).ready(function () {


    });
</script>

<!-- dashboard end-->

<div class="container">
    <div class="row col-sm-3">
        <div class="form-group">

            <div class="">
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-signal"></span>&nbsp;<span class="panel-title"><strong
                            class="text-info">To Do List (Task Management) @ViewBag.ay</strong></span>
                </div>
                <div class="panel-body">
                    @* @Html.Action("ViewTaskNewShort") *@

                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title"><strong class="text-info">Leave Status</strong> </span>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <tr>
                                <td>Allowed Leaves</td>
                                <td>Leave Taken</td>
                                <td>Balance Leave</td>
                            </tr>
                            <tr>
                                <td>@ViewBag.al</td>
                                <td>@ViewBag.lt</td>
                                <td>@ViewBag.bl</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-11">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-signal"></span>&nbsp;<span class="panel-title">
                        <strong class="text-info">
                            Employee Details
                        </strong>
                    </span>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        @if (Model != null && Model.Any())
                        {
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Employee Code</th>
                                        <th>Name</th>
                                        <th>Joining Date</th>
                                        <th>Department</th>
                                        <th>Designation</th>
                                        <th>User Type</th>
                                        <th>Address</th>
                                        <th>City</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var emp in Model)
                                    {
                                        <tr>
                                            <td>@emp.EmpCode</td>
                                            <td>@emp.EName</td>
                                            <td>@emp.JoiningDate?.ToString("dd-MM-yyyy")</td>
                                            <td>@emp.Department</td>
                                            <td>@emp.Designation</td>
                                            <td>@emp.UserType</td>
                                            <td>@emp.Address, @emp.Locality</td>
                                            <td>@emp.City - @emp.Pincode</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p class="text-danger">No employee data available.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
