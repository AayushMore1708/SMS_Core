@model  SMS_Core.Models.qryEmployee
@{
    ViewBag.Title = "Welcome to Student Management System";
}
<script src="~/Scripts/jqx-all.js"></script>

<script>

    $(document).ready(function () {


    });
</script>

<!-- dashboard end-->

<div class="container">
    <div class="row col-sm-3">
        <div class="form-group">

            <div class="">
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-signal"></span>&nbsp;<span class="panel-title"><strong class="text-info">To Do List (Task Management) @ViewBag.ay</strong></span>
                </div>
                <div class="panel-body">
                    @* @Html.Action("ViewTaskNewShort") *@

                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title"><strong class="text-info">Leave Status</strong> </span>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <tr>
                                <td>Allowed Leaves</td> 
                                <td>Leave Taken</td> 
                                <td>Balance Leave</td> 
                            </tr>
                            <tr>
                                <td>@ViewBag.al</td>
                                <td>@ViewBag.lt</td>
                                <td>@ViewBag.bl</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-11">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-signal"></span>&nbsp;<span class="panel-title">
                        <strong class="text-info">
                            Employee Details
                        </strong>
                    </span>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        @if (Model != null)
                        {
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <tr>
                                <td>Employee Code : @Model.EmpCode</td>
                                <td>Name : @Model.EName</td>
                                <td>
                                    Joining Date : @Model.JoiningDate
                                </td>
                            </tr>
                            <tr>
                                <td>Department : @Model.Department</td>
                                <td>Designation : @Model.Designation </td>
                                <td>
                                    User Type : @Model.UserType
                                </td>
                            </tr>
                            <tr>
                                <td>Address : @Model.Address</td>
                                <td>Locality : @Model.Locality</td>
                                <td>
                                    City : @Model.City - @Model.Pincode
                                </td>
                            </tr>
                        </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




