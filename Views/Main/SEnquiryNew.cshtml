@model SMS_Core.Models.tblStudentEnquiry
@{
    // Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Acadamic Certificate</title>
    <link rel="stylesheet" href="~/Content/css/chosen.css">

    <script type="text/javascript">
        $(document).ready(function () {
            
            $("#EnquiryDate").datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: 'dd-M-yy'
            });
            // $('#footer').hide();
            $('#sav').click(function (event) {
                if ($('#StudentName').val() != "") {
                    if (!confirm('Are you sure that you want to Save')) {
                        event.preventDefault();
                    }
                    else {
                        $('#frm').submit();
                        return false;

                    }
                }
                else {
                    alert("Student Name should not be blank")
                }
            });

            $('#frmsave').click(function (event) {
                if ($('#StudentName').val() != "") {
                    if (!confirm('Are you sure that you want to Save')) {
                        event.preventDefault();
                }
                else {
                    $('#frm').submit();
                    return false;
                }
            }
                else {
                    alert("Student Name should not be blank")
                    return false;
                }
            });


        });

    </script>
</head>
<body>
    <div style="font-size:12px;height:40px;vertical-align:top;margin-left:10px">
        @* <img src="~/_imgs/grid/SaveAndClose_16.png" />&nbsp;&nbsp; @Ajax.ActionLink("SAVE & CLOSE", null, null, null, new { id = "sav" })&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; *@
    </div>


    <h3>&nbsp;&nbsp;Student Enquiry</h3>
    <div class="panel">
        <div class="panel-body">
            @using (Html.BeginForm("SEnquiryNew", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "frm", @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label class="control-label col-lg-2">Enquiry Date</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.EnquiryDate, new { @class = "form-control input-sm" })

                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Student Name</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.StudentName, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Student Parent Name</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.StudentParentName, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Student Contact</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.StudentParentContact, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Student Parent Address</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.StudentParentAddress, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Student Parent Locality</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.StudentParentLocality, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Student Parent City</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.StudentParentCity, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Student Parent State</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.StudentParentState, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Student Parent Country</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.StudentParentCountry, new { @class = "form-control input-sm" })
                    </div>
                </div>



                <div class="form-group">
                    <label class="control-label col-lg-2">Course Name</label>
                    <div class="col-lg-4">
                        @Html.DropDownListFor(model => model.StudentCourseName, new SelectList(ViewBag.crc, "AcadamicCourceName", "AcadamicCourceName"),"", new { @class = "form-control input-sm" })

                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Batch Name</label>
                    <div class="col-lg-4">
                        @Html.DropDownListFor(model => model.StudentBatchName, new SelectList(ViewBag.bat, "BatchName", "BatchName"),"", new { @class = "form-control input-sm" })

                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">For Year</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.StudentYear, new { @class = "form-control input-sm" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Remarks</label>
                    <div class="col-lg-4">
                        @Html.TextAreaFor(m => m.StudentEnqRemarks, new { @class = "form-control input-sm" })
                    </div>
                </div>


            }


            <div class="form-group">
                <label for="tags" class="control-label col-lg-4">&nbsp;</label>
                <div class="col-lg-8">
                    <input type="submit" id="frmsave" value="Save & Close" class="btn btn-primary" />
                    <button class="btn btn-primary"><i class="icon-refresh icon-white"></i> Refresh</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/js/chosen.jquery.js" type="text/javascript"></script>

    <script type="text/javascript">
            var config = {
                '.chosen-select': {},
                '.chosen-select-deselect': { allow_single_deselect: true },
                '.chosen-select-no-single': { disable_search_threshold: 10 },
                '.chosen-select-no-results': { no_results_text: 'Oops, nothing found!' },
                '.chosen-select-width': { width: "100%" }
            }
                          //for (var selector in config) {
                          //    $(selector).chosen(config[selector]);
                         // }
    </script>
</body>
</html>