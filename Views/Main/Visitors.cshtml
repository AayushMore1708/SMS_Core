@model IEnumerable<SMS_Core.Models.tblVisitor>
@{
    // Layout = null;
    @* Html.EnableClientValidation(); *@
}
 
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Exam List</title>
    <style>
        html, body {
            height: 100%;
        }

        .MyCssClassD
{
  background:url(@Url.Content("~/Content/ico/delete.png")) no-repeat;display:block; height:24px; width:24px;
}

        .MyCssClassE
{
  background:url(@Url.Content("~/Content/ico/edit.png")) no-repeat;display:block; height:24px; width:24px;
}


    </style>



    <link href="~/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
</head>
<body class='default'>
    <div id="crmContentPanel">
        <div style="font-size:12px;height:40px;vertical-align:top;margin-left:10px;">
            <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;@Html.ActionLink("New Visitor", "VisitorNew", "Home")&nbsp;&nbsp;&nbsp;&nbsp;
             

        </div>

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Visitors 
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Visitor  Category</th>
                                    <th>Visitor Name</th>
                                    <th>Visitor Details</th>
                                    <th>Whome to Visit</th>
                                    <th>Course Name</th>
                                    <th>Batch Name</th>
                                    <th>Student Name</th>
                                    <th>Teacher Name</th>
                                    <th>Visit Purpose</th>
                                    <th>Visit Date</th>
                                    <th>Visit Time</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>

                                    <td>@Html.DisplayFor(modelItem => item.VisitorCategory)</td>
                                    <td>@Html.DisplayFor(modelItem => item.VisitorName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.VisitorDetails)</td>
                                    <td>@Html.DisplayFor(modelItem => item.WhomToVisit)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CourseName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.BatchName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.StudentName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TeacherName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.VisitPurpose)</td>
                                    <td>  @string.Format("{0:dd-MM-yyyy}", item.VisitDate) </td>
                                    <td>@Html.DisplayFor(modelItem => item.VisitTime)</td>
                                    <td>@Html.DisplayFor(modelItem => item.VisitorStatus)</td>
                                    <td>
                                        @Html.ActionLink(" ", "VisitorEdit", new { id = item.VisitorID }, new { @class = "MyCssClassE" })

                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/js/jquery.dataTables.js"></script>
    <script src="~/Content/js/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });

    </script>
</body>
</html>