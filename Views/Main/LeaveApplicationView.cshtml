@model IEnumerable<SMS_Core.Models.tblLeaveApplication>
@{
    // Layout = null;
    @* Html.EnableClientValidation(); *@
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Leave Application View</title>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#footer").hide()
            //table start
            // prepare the data
        });

    </script>
    <style>
        html, body {
            height: 100%;
        }

        .MyCssClassD
{
  background:url(@Url.Content("~/Content/ico/delete.png")) no-repeat;display:block; height:24px; width:24px;
}

        .MyCssClassE
{
  background:url(@Url.Content("~/Content/ico/edit.png")) no-repeat;display:block; height:24px; width:24px;
}


    </style>



    <link href="~/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
</head>
<body class='default'>
    <div id="crmContentPanel">

        <div class="panel panel-default">
            <div class="panel-heading">
                Leave Application
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>EmpName</th>
                                <th>EmpDesignation</th>
                                <th>LeaveFromDate</th>
                                <th>LeaveToDate</th>
                                <th>LeaveReason</th>
                                <th>Status</th>

                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.EmpName)</td>
                                <td>@Html.DisplayFor(modelItem => item.EmpDesignation)</td>
                                <td>  @string.Format("{0:dd-MM-yyyy}", item.LeaveFromDate) </td>
                                <td>  @string.Format("{0:dd-MM-yyyy}", item.LeaveToDate) </td>
                                <td>  @string.Format("{0:dd-MM-yyyy}", item.LeaveReason) </td>
                                <td>  @string.Format("{0:dd-MM-yyyy}", item.LeaveStatus) </td>

                                <td>
                                    @if (ViewBag.erole == "admin" || User.Identity.Name=="kamlesh@satams.com" || User.Identity.Name=="admin@satams.com")
                                    {
                                    @Html.ActionLink(" ", "LeaveApplicationEdit", new { id = item.LeaveApplicationId }, new { @class = "MyCssClassE" })
                                    }
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <script src="~/Content/js/jquery.dataTables.js"></script>
    <script src="~/Content/js/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });

    </script>
</body>
</html>