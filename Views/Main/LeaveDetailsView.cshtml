@model IEnumerable<SMS_Core.Models.tblLeaveDetail>
@{
    // Layout = null;
    @* Html.EnableClientValidation(); *@
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Leave Details List</title>
    <style>
        html, body {
            height: 100%;
        }

        .MyCssClassD
{
  background:url(@Url.Content("~/Content/ico/delete.png")) no-repeat;display:block; height:24px; width:24px;
}

        .MyCssClassE
{
  background:url(@Url.Content("~/Content/ico/edit.png")) no-repeat;display:block; height:24px; width:24px;
}


    </style>



    <link href="~/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
</head>
<body class='default'>
    <div id="crmContentPanel">

        <div class="panel panel-default">
            <div class="panel-heading">
                Leave Details
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Leave Category</th>
                                <th>Designation</th>
                                <th>Leave Count</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.LeaveCategory)</td>
                                <td>@Html.DisplayFor(modelItem => item.EmpDesignation)</td>
                                <td>@Html.DisplayFor(modelItem => item.LeaveCount)</td>
                                <td>
                                    @Html.ActionLink(" ", "LeaveDetailsEdit", new { id = item.LeaveDetailsId}, new { @class = "MyCssClassE" }) @Html.ActionLink(" ", "DeleteLeaveDetails", new { id = item.LeaveDetailsId }, new { @class = "MyCssClassD" })

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <script src="~/Content/js/jquery.dataTables.js"></script>
    <script src="~/Content/js/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });

    </script>
</body>
</html>