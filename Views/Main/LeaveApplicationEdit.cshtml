@model SMS_Core.Models.tblLeaveApplication
@{
    // Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Add Leave Application</title>
    <link rel="stylesheet" href="~/Content/css/chosen.css">

    <script type="text/javascript">
        $(document).ready(function () {

            $('#EmpID').change(function () {
                var vn = $("#EmpID option:selected").val();
                var vnn = $("#EmpID option:selected").text();
                $('#EmpName').val(vnn)


            $.getJSON("@Url.Content("~/Home/GetDesignation")", { vnd: vn }, function (data) {

                $('#EmpDesignation').val(data.Designation);

                });

            });

            $("#LeaveFromDate").datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: 'dd-M-yy'
            });

            $("#LeaveToDate").datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: 'dd-M-yy'
            });

            // $('#footer').hide();
            $('#sav').click(function (event) {
                if ($('#LeaveCategoryName').val() != "") {
                    if (!confirm('Are you sure that you want to Save')) {
                        event.preventDefault();
                    }
                    else {
                        $('#frm').submit();
                        return false;
                    }
                }
                else {
                    alert("CategoryName should not be blank")
                }
            });

            $('#frmsave').click(function (event) {
                if ($('#CategoryName').val() != "") {
                    if (!confirm('Are you sure that you want to Save'))
                        event.preventDefault();
                }
                else {
                    alert("CategoryName should not be blank")
                    return false;
                }
            });


        });

    </script>
</head>
<body>
    <div style="font-size:12px;height:40px;vertical-align:top;margin-left:10px">
        @* <img src="~/_imgs/grid/SaveAndClose_16.png" />&nbsp;&nbsp; @Ajax.ActionLink("SAVE & CLOSE", null, null, null, new { id = "sav" })&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; *@
        @if (User.Identity.Name == "admin@satams.com" || User.Identity.Name == "kamelsh@satams.com")
        {
        <text>
            <img src="~/_imgs/grid/EditRule_16.png" />&nbsp; &nbsp; @Html.ActionLink("Leave Category", "LeaveCategoryNew", "Home")&nbsp; &nbsp;
            <img src="~/_imgs/grid/EditRule_16.png" />&nbsp; &nbsp; @Html.ActionLink("Add Leave Category", "LeaveCategoryNew", "Home")&nbsp; &nbsp;
            <img src="~/_imgs/grid/EditRule_16.png" />&nbsp; &nbsp; @Html.ActionLink("Leave Details", "LeaveDetailsNew", "Home")&nbsp; &nbsp;
        </text>
        }
    </div>


    <h3>&nbsp;&nbsp;Leave Application New</h3>

    <div class="col-lg-12">
        <div class="row">
            <div class="col-sm-6">

                @using (Html.BeginForm("LeaveApplicationEdit", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "frm", @class = "form-horizontal" }))
                {
                    <div class="panel">
                        <div class="panel-body">

                            <div class="form-group">
                                <label class="control-label col-lg-4">Employee Name</label>
                                <div class="col-lg-4">

                                    @Html.TextBoxFor(model => model.EmpName, new { @Readonly = true, @class = "form-control input-sm" })
                                    @Html.HiddenFor(model => model.EmpID, new { @class = "form-control input-sm" })
                                    @Html.HiddenFor(model=>model.LeaveApplicationId)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-lg-4">Designation</label>
                                <div class="col-lg-4">
                                    @Html.TextBoxFor(model => model.EmpDesignation, new { @Readonly = true, @class = "form-control input-sm" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-lg-4">Leave From Date</label>
                                <div class="col-lg-4">
                                    @Html.TextBoxFor(model => model.LeaveFromDate, new { @Readonly = true, @class = "form-control input-sm" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-lg-4">Leave To Date</label>
                                <div class="col-lg-4">
                                    @Html.TextBoxFor(model => model.LeaveToDate, new { @Readonly = true, @class = "form-control input-sm" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-lg-4">Leave Reason</label>
                                <div class="col-lg-4">
                                    @Html.TextAreaFor(model => model.LeaveReason, new { @Readonly = true, @class = "form-control input-sm" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-lg-4">Status</label>
                                <div class="col-lg-4">
                                    @Html.DropDownListFor(model => model.LeaveStatus, new SelectList(new[] { "Approved", "Hold", "Reject", "Cancel"}),"", new { @class = "form-control input-sm" })

                                </div>
                            </div>


                            <div class="form-group">
                                <label for="tags" class="control-label col-lg-4">&nbsp;</label>
                                <div class="col-lg-8">
                                    <input type="submit" id="frmsave" value="Update " class="btn btn-primary" />
                                    <button class="btn btn-primary"><i class="icon-refresh icon-white"></i> Refresh</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-6">
                <div class="table-responsive">
                    @* @Html.Action("LeaveApplicationView") *@
                </div>


            </div>
        </div>
    </div>

    <script src="~/Content/js/chosen.jquery.js" type="text/javascript"></script>

    <script type="text/javascript">
            var config = {
                '.chosen-select': {},
                '.chosen-select-deselect': { allow_single_deselect: true },
                '.chosen-select-no-single': { disable_search_threshold: 10 },
                '.chosen-select-no-results': { no_results_text: 'Oops, nothing found!' },
                '.chosen-select-width': { width: "100%" }
            }
                                          //for (var selector in config) {
                                          //    $(selector).chosen(config[selector]);
                                         // }
    </script>
</body>
</html>