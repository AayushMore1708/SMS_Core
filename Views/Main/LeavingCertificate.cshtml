@model IEnumerable<SMS_Core.Models.tblLeavingCertificate>
@{
    // Layout = null;
    @* Html.EnableClientValidation(); *@
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Leaving Certificate</title>
    <style>
        html, body {
            height: 100%;
        }

        .MyCssClassD
{
  background:url(@Url.Content("~/Content/ico/delete.png")) no-repeat;display:block; height:24px; width:24px;
}

        .MyCssClassE
{
  background:url(@Url.Content("~/Content/ico/edit.png")) no-repeat;display:block; height:24px; width:24px;
}

        .MyCssClassP
{
  background:url(@Url.Content("~/Content/ico/Print.jpg")) no-repeat;display:block; height:24px; width:24px;
}

    </style>



    <link href="~/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
</head>
<body class='default'>
    <div id="crmContentPanel">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <b>Leaving Certificate</b>&nbsp;&nbsp;&nbsp;
                    @if (ViewBag.Desg != "Student" && ViewBag.Desg != "Employee")
                    {
                        <text>
                            <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;@Html.ActionLink("New", "LeavingCertificateNew", "Home")&nbsp;&nbsp;&nbsp;&nbsp;
                        </text>
                    }

                    @if (ViewBag.Desg != "Student" && ViewBag.Desg != "Employee")
                    {
                        <text>
                            <b>Acadamic Certificate</b>&nbsp;&nbsp;&nbsp;
                            <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;@Html.ActionLink("New", "AcadamicCertificateNew", "Home")&nbsp;&nbsp;&nbsp;&nbsp;
                        </text>
                    }
                    @Html.ActionLink("Acadamic Certificate", "AcadamicCertificate", "Home")&nbsp;&nbsp;&nbsp;&nbsp;
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>LeavingCertificateDate</th>
                                    <th>School Name</th>
                                    <th>School Address</th>
                                    <th>Student Name</th>
                                    <th>Gender</th>
                                    <th>StudentRollNumber</th>
                                    <th>Nationality</th>
                                    <th>BirthYear</th>
                                    <th>AdmittedClass</th>
                                    <th>HighestClass</th>
                                    <th>Remarks</th> 
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>  @string.Format("{0:dd-MM-yyyy}", item.LeavingCertificateDate)  </td>
                                    <td>@Html.DisplayFor(modelItem => item.SchoolName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SchoolAddress)</td>
                                    <td>@Html.DisplayFor(modelItem => item.StudentName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                                    <td>@Html.DisplayFor(modelItem => item.StudentRollNumber)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Nationality)</td>
                                    <td>  @string.Format("{0:dd-MM-yyyy}", item.BirthYear)  </td>
                                    <td>@Html.DisplayFor(modelItem => item.AdmittedClass)</td>
                                    <td>@Html.DisplayFor(modelItem => item.HighestClass)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Remarks)</td> 
                                    <td>
                                        @if (ViewBag.erole == "admin" || User.Identity.Name == "kamlesh@satams.com")
                                        {
                                            @Html.ActionLink(" ", "LeavingCertificateEdit", new { id = item.LeavingCertificateID }, new { @class = "MyCssClassE" }) 
                                            @Html.ActionLink(" ", "LeavingCertificatePrint", new { id = item.LeavingCertificateID }, new {@target="new", @class = "MyCssClassP" });
                                        }
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/js/jquery.dataTables.js"></script>
    <script src="~/Content/js/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });

    </script>
</body>
</html>