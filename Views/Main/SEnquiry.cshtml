@model IEnumerable<SMS_Core.Models.tblStudentEnquiry>
@{
    // Layout = null;
    @* Html.EnableClientValidation(); *@
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Student Enquiry</title>
    <style>
        html, body {
            height: 100%;
        }

        .MyCssClassD
{
  background:url(@Url.Content("~/Content/ico/delete.png")) no-repeat;display:block; height:24px; width:24px;
}

        .MyCssClassE
{
  background:url(@Url.Content("~/Content/ico/edit.png")) no-repeat;display:block; height:24px; width:24px;
}

        .MyCssClassP
{
  background:url(@Url.Content("~/Content/ico/Print.jpg")) no-repeat;display:block; height:24px; width:24px;
}

    </style>



    <link href="~/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
</head>
<body class='default'>
    <div id="crmContentPanel">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-heading">
                        <b>Student Enquiry</b>&nbsp;&nbsp;&nbsp;  <img src="~/_imgs/grid/Add_16_New.png" />&nbsp;@Html.ActionLink("New", "SEnquiryNew", "Home")&nbsp;&nbsp;&nbsp;&nbsp;
                        
                    </div>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Enquiry Date</th>
                                    <th>Student Name</th>
                                    <th>Student Parent Name</th>
                                    <th>Student Parent Contact</th>
                                    <th>Student Parent Address</th>
                                    <th>Student Parent Locality</th>
                                    <th>Student Parent City</th>
                                    <th>Student Parent State</th>
                                    <th>Student Parent Country</th>
                                    <th>Student Course Name</th>
                                    <th>Student Batch Name</th>
                                    <th>For Year</th>
                                    <th>Remarks</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>  @string.Format("{0:dd-MM-yyyy}", item.EnquiryDate)  </td>
                                    <td>@Html.DisplayFor(modelItem => item.StudentName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.StudentParentName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.StudentParentContact)</td>
                                    <td>@Html.DisplayFor(modelItem => item.StudentParentAddress)</td>
                                    <td>@Html.DisplayFor(modelItem => item.StudentParentLocality)</td>
                                    <td>@Html.DisplayFor(modelItem => item.StudentParentCity)</td>
                                    <td>@Html.DisplayFor(modelItem => item.StudentParentState)</td>
                                    <td>@Html.DisplayFor(modelItem => item.StudentParentCountry)</td>
                                    <td>@Html.DisplayFor(modelItem => item.StudentCourseName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.StudentBatchName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.StudentYear)</td>
                                    <td>@Html.DisplayFor(modelItem => item.StudentEnqRemarks)</td>
                                    <td>
                                        @if (ViewBag.erole == "admin" || User.Identity.Name == "kamlesh@satams.com")
                                        {
                                            @Html.ActionLink(" ", "SEnquiryEdit", new { id = item.StudentEnquiryId }, new { @class = "MyCssClassE" })
                                        }
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/js/jquery.dataTables.js"></script>
    <script src="~/Content/js/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });

    </script>
</body>
</html>