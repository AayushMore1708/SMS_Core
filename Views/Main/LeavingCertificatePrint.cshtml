@model SMS_Core.Models.tblLeavingCertificate
@{
// Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="keywords" content="jQuery Splitter, Splitter Widget, Splitter, jqxSplitter" />
    <meta name="description" content="This page demonstrates splitter's events" />
    <title id='Description'>Leaving Certificate</title>
    <link rel="stylesheet" href="~/Content/css/chosen.css">

    <script type="text/javascript">
        $(document).ready(function () {


            });


    </script>
</head>
<body>


    <h3>&nbsp;&nbsp;Leaving Certificate</h3>

    <div class="panel">
        <div class="panel-body">
            @using (Html.BeginForm("CreatePurchaseReceipt", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "frm", @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <label class="control-label col-lg-2">Leaving Certificate Date</label>
                    <div class="col-lg-2">
                        @string.Format("{0:dd-MM-yyyy}", Model.LeavingCertificateDate)
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">School Name</label>
                    <div class="col-lg-2">
                        @Model.SchoolName
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">School Address</label>
                    <div class="col-lg-2">
                        @Model.SchoolAddress
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-lg-2">Student Name</label>
                    <div class="col-lg-2">
                        @Model.StudentName
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Student Roll Number</label>
                    <div class="col-lg-2">
                        @Model.StudentRollNumber
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Student Birth Date</label>
                    <div class="col-lg-2">
                        @string.Format("{0:dd-MM-yyyy}", Model.BirthYear)
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Gender</label>
                    <div class="col-lg-2">
                        @Model.Gender
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Nationality</label>
                    <div class="col-lg-2">
                        @Model.Nationality
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Admitted Class</label>
                    <div class="col-lg-2">
                        @Model.AdmittedClass
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Highest Class</label>
                    <div class="col-lg-2">
                        @Model.HighestClass
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-2">Remarks</label>
                    <div class="col-lg-2">
                        @Model.Remarks
                    </div>
                </div>

                <br /><br />
                <br />


                <div class="form-group">
                    <label class="control-label col-lg-2">&nbsp;</label>
                    <div class="col-lg-4">
                        <label class="control-label col-lg-4">Authorised By</label>
                    </div>
                </div>

            }
            </div>
    </div>



</body>
</html>