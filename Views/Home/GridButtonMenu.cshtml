        font-size: 16px;
        width: 100%;
        /* Ensure tiles take full width of grid cell */
        box-sizing: border-box;
        /* Include padding in width */
        font-weight: bold;
        text-align: center;
        flex-direction: column;
        border-radius: 8px;
        cursor: pointer;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease, background-color 0.2s ease;
    }

    .tile:hover {
        background-color: #333;
        transform: scale(1.5);
        box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s ease, background-color 0.2s ease;
        /* Add the sound effect */
        cursor: pointer;
    }

    .tile:hover::after {
        content: '';
        /* Play the sound on hover */
        display: block;
        width: 0;
        height: 0;
        pointer-events: none;
        position: fixed;
    }



    .footer {
