    }

    .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;

        /* Ensure it takes full screen height */
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(170px, 1fr));
        /* Make it responsive */
        gap: 20px;
        margin-top: 1rem;
        /* Reduce unnecessary margin */
        width: 100vw;
        max-width: 1400px;
        /* Use full width of the container */
        /* Optional: Limit max width */
        overflow: hidden;
        box-sizing: border-box;
        /* Allow scrolling if needed */
    }


    .icons {
