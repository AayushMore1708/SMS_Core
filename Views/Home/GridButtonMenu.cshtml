@model SMS.Models.LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Student Management System";
}

<!DOCTYPE html>
<html dir="ltr">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="-1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        .app-bar {
            background-color: #6a1b9a;
            color: white;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .app-bar > div {
            display: flex;
            align-items: center;
        }

        .app-bar > div > span {
            margin-right: 10px;
            
        }

        .app-bar > div > a {
            color: white;
            text-decoration: none;
        }

        .container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 20px;
 
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(3, minmax(150px, 1fr));
            grid-template-rows: repeat(3, 1fr);
            gap: 20px;
            margin-top: 20px;
        }
        .icons
        {
                    gap: 30px;
            
        }
        .tile {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            background-color: #4caf50; /* Default color */
            color: white;
            font-size: 16px;
            font-weight: bold;
            text-align: center;
            border-radius: 8px;
            cursor: pointer;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease;
        }

        /* Custom colors for tiles */
        .tile.institute { background-color: #03a9f4; }
        .tile.academic-year { background-color: #ff9800; }
        .tile.students { background-color: #009688; }
        .tile.visitors { background-color: #8bc34a; }
        .tile.leave { background-color: #795548; }
        .tile.exam { background-color: #9c27b0; }
        .tile.assignments { background-color: #795548; }
        .tile.notes { background-color: #795548; }

        .tile:hover {
            background-color: #333; /* Hover effect */
        }
        body {
  transition: background-color 0.1s ease-in;
}

        .footer {
            width: 100%;
            background-color: #9c66f8;
            color: #fff;
            padding: 10px 0;
            text-align: center;
            position: relative;
            bottom: 0;
        }

        .footer a {
            color: white;
            text-decoration: none;
        }
        a{
        color:white;
        text-decoration:none;
        }
    </style>
    <link rel="stylesheet" href="~/css/site.scss" />
</head>

<body>
    <div class="app-bar">
        <div>
            <span>SMS</span>
        </div>
        <div class="icons">
            <a href="#"><i class="fas fa-cog" aria-hidden="true"></i></a>
            <a href="#"><i class="fas fa-question-circle" aria-hidden="true"></i></a>
        </div>
    </div>
<h1 align="center">
    Student Management System
</h1>
    <div class="container">
        <div class="grid">
           <div class="tile institute">Institute</div>
            <div class="tile academic-year">Academic Year</div>
            <div class="tile students"> <a href="/home/ViewStudData">Students</a></div>
            <div class="tile visitors">Visitors</div>
            <div class="tile leave">Leave</div>
            <div class="tile exam">Exam</div>
            <div class="tile assignments">Assignments</div>
            <div class="tile notes">Notes</div>
            <div class="tile employee">Employee</div>
            <div class="tile timetable">TimeTable</div>
            <div class="tile lesson-plan">Lesson Plan</div>
            <div class="tile courses">Courses</div>
            <div class="tile batches">Batches</div>
            <div class="tile class-teacher-allocation">Class Teacher Allocation</div>
            <div class="tile subject">Subject</div>
            <div class="tile student-attendance">Student Attendance</div>
            <div class="tile emp-attendance">Employee Attendance</div>
            <div class="tile fee">Fee</div>
            <div class="tile vendor">Vendor</div>
            <div class="tile circulars">Circulars</div>
            <div class="tile salary">Salary</div>
            <div class="tile library">Library</div>
            <div class="tile certificate">Certificate</div>
            <div class="tile task-app">TaskApp</div>
            <div class="tile communication">Communication</div>
            <div class="tile student-enquiry">Student Enquiry</div>
        </div>
    </div>

    <div class="footer">
        <span><a href="http://www.satams.com">Powered by</a> SATAMS</span>
    </div>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" rel="stylesheet">


</body>
</html>

