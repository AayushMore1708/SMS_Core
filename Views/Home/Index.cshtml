@model SMS.Models.LoginModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Sign in to Student Management System";
}

<!DOCTYPE html>
<html dir="ltr">

<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="-1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
</head>

<body>
    <div class="container-fluid  d-flex mx-auto  ">
        <div class="row flex-nowrap ">
            <!-- Left Image Section -->
            <div class="col-md-6 d-none d-md-flex ">
                <img src="~/Images/SMS_Brouchure.jpg" class="img-fluid" alt="Brochure Image" >
            </div>

            <!-- Right Login Form Section -->
            <div class="col-md-6 d-flex card border border-primary border-5 ">
                <div >
                    <div class="text-center">
                        <img src="~/Images/vpm1.jpg" width="150" height="100" alt="Logo" >
                        <h4 class="fw-bold">Satam's</h4>
                        <h4 class="fw-bold">Student Management System</h4>
                        <h3>Log in</h3>
                    </div>

                    <form asp-controller="Home" asp-action="Index" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label asp-for="UsernName" class="form-label">Username</label>
                            <input asp-for="UsernName" class="form-control" placeholder="Enter your username" required>
                            <span asp-validation-for="UsernName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="SelectedAcademicYear" class="form-label">Select Academic Year</label>
                            <select asp-for="SelectedAcademicYear" class="form-select" required>
                                <option value="2019">2019</option>
                                <option value="2020">2020</option>
                                <option value="2021">2021</option>
                                <option value="2022">2022</option>
                                <option value="2023">2023</option>
                                <option value="2024">2024</option>
                            </select>
                        </div>
                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary w-100">Sign in</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Section -->
    <footer class="text-light text-center py-4">
        <span>
            <a href="http://www.satams.com" class="text-dark text-decoration-none">Powered by</a>
            <img src="~/Images/satams.png" width="60" height="30" alt="Satams Logo" />
        </span>
    </footer>

</body>

</html>
